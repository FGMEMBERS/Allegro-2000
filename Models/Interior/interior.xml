<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourverrieretour</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Allegro-2000/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/Allegro-2000/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.547 </x-m>
      <y-m> -0.220 </y-m>
      <z-m> -0.082 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Allegro-2000/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.188 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.253 </z-m>
      <pitch-deg>  -28 </pitch-deg>
    </offsets>
  </model>

  <!-- Pilot seat -->
  <model>
    <path>Aircraft/Allegro-2000/Models/Interior/Seats/seat.xml</path>
