<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <!-- Le fuselage -->
  <model>
    <path>Aircraft/Allegro-2000/Models/allegro.xml</path>
  </model>

  <!-- Les flotteurs -->
  <model>
    <path>Aircraft/Allegro-2000/Models/floats.xml</path>
  </model>

  <!-- Une ombre pour OSG -->
  <model>
    <path>Aircraft/Allegro-2000/Models/shadowF.xml</path>
    <offsets>
      <x-m>  0.00000 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.99351 </z-m>
    </offsets>
  </model>

  <!-- Trainée gauche -->
  <model>
    <path>Aircraft/Allegro-2000/Models/Effects/Wakes/wakeG.xml</path>
    <offsets>
      <x-m>  0.885 </x-m>
      <y-m> -0.700 </y-m>
      <z-m> -0.888 </z-m>
      <pitch-deg> -45 </pitch-deg>
    </offsets>
  </model> 

  <!-- Trainée droite -->
  <model>
    <path>Aircraft/Allegro-2000/Models/Effects/Wakes/wakeD.xml</path>
    <offsets>
      <x-m>  0.885 </x-m>
      <y-m>  0.700 </y-m>
      <z-m> -0.900 </z-m>
      <pitch-deg> -45 </pitch-deg>
    </offsets>
  </model> 

</PropertyList>
