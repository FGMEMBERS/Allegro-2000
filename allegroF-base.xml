<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>1.0</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/Allegro-2000/allegro-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/Allegro-2000/Sounds/allegroF-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/Allegro-2000/Models/allegroF.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <flaps>
      <setting>0.00</setting>
      <setting>1.00</setting> <!-- 20 deg -->
    </flaps>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int" n="0">0</int>
        <int type="int" n="1">0</int>
        <int type="int" n="2">0</int>
        <int type="int" n="3">0</int>
        <int type="int" n="4">0</int>
        <int type="int" n="5">0</int>
      </generic>
    </multiplay>

    <help>
      <title>allegro</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
    </help>

    <menubar include="Dialogs/allegro-menu.xml"/>

  </sim>
 
  <controls>
    <gear>
      <brake-parking type="double">1</brake-parking>
    </gear>
  </controls>

  <input>
    <keyboard include="Nasal/allegro-keyboard.xml"/>
  </input>
 
  <nasal>
    <allegro>
      <file>Aircraft/Allegro-2000/Nasal/doors.nas</file>
      <file>Aircraft/Allegro-2000/Nasal/light.nas</file>
      <file>Aircraft/Allegro-2000/Nasal/liveries.nas</file>
      <file>Aircraft/Allegro-2000/Nasal/immat.nas</file>
    </allegro>
  </nasal>
   
</PropertyList>
